// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id         Int     @id @default(autoincrement())
  first_name String
  last_name  String?
  email      String  @unique
  password   String
}

model Patient {
  id           String   @unique
  first_name   String
  last_name    String?
  email        String
  phone        Int
  Appointment  Appointment[]
  Prescription Prescription[]
}

model Department {
  id     Int      @id @default(autoincrement())
  name   String
  Doctor Doctor[]
}

model Doctor {
  id           String         @unique
  first_name   String
  last_name    String?
  email        String
  password     String
  phone        Int
  dept_id      Int
  shift        DateTime
  department   Department     @relation(fields: [dept_id], references: [id])
  Appointment  Appointment[]
  Prescription Prescription[] 
}

model Appointment {
  id         Int     @id @default(autoincrement())
  patient_id String
  doctor_id  String
  patient    Patient @relation(fields: [patient_id], references: [id])
  doctor     Doctor  @relation(fields: [doctor_id], references: [id])
}

model Prescription {
  id              Int      @id @default(autoincrement())
  patient_id      String
  doctor_id       String
  medication_name String
  dosage          String?
  instructions    String?
  date_prescribed DateTime
  patient         Patient  @relation(fields: [patient_id], references: [id])
  doctor          Doctor   @relation(fields: [doctor_id], references: [id])
}

model Staff {
  id         String  @unique
  first_name String
  last_name  String?
  email      String  @unique
  password   String
  phone      Int
}
